  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "localRoot": "${workspaceFolder}/Chapter_08",
      "program": "${workspaceFolder}/Chapter_08/server.ts",
      "outFiles": ["${workspaceFolder}/Chapter_08/**/*.js"],
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://*": "${workspaceFolder}/*",
        "webpack://apprun/*": "${workspaceFolder}/node_modules/apprun/*"
      }
    }
  ]
}